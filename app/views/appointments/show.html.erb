<div class="navbar-icons">
  <%= link_to :back do %>
    <i class="fa-solid fa-chevron-left"></i>
  <% end %>

  <%= link_to prescriptions_path do %>
    <i class="fa-solid fa-calendar-days"></i>
  <% end %>
</div>

<div class="container-white">
  <div class="header-title-purple">
    <div class="left-title">
      <h2><i class="fa-solid fa-capsules"></i>My appointment of the day</h2>
    </div>
  </div>
  <h1>  RDV with <%= @appointment.doctor.title  %>: <%= @appointment.doctor.name %> ,  <%= @appointment.doctor.specialty %> Specialty </h1>

    <ul>
      <li>Appointment Date:  <%= @appointment.date %> <%=@appointment.date.strftime('%A')%></li>
      <li>Appoint time:  <%= @appointment.appointment_hour %>h  <%= @appointment.appointment_min %>mins </li>
      <li>Address:  <strong><%= @appointment.doctor.address %></strong></li>
      <li>Comment:  <%= @appointment.comment %></li>
    </ul>
  <%= link_to "Back to appointments", appointments_path(@appointment) %>

</div>
