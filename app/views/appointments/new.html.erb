<div class="new-rdv">

    <div class="new-rdv-title">
      <h1>New Appointment</h1>
    </div>
  <!-- simple form for new -->
  <%= simple_form_for @appointment, html: { data: { controller: 'flatpickr' } } do |f| %>


    <div class="title-specialist">
    <%= f.association :doctor, collection: Doctor.all , prompt: "Specialist", label:false%>
    </div>
    <!-- html 5 true means that value nil , without html 5 data will be today -->
    <%= f.input :date, as: :string, input_html: {class: 'd-none', data: { flatpickr_target: 'startDateInput'} }, label:"Date test" %>
    <%= f.input :appointment_hour, collection: 8..19 %>
    <%= f.input :appointment_min, collection: (0..45).step(15) %>
    <%= f.input :comment %>
    <%= f.button :submit %>
  <% end %>

</div>
