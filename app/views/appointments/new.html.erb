<div class="navbar-icons">
  <%= link_to :back, html: {class: "log-out-right"} do %>
    <i class="fa-solid fa-chevron-left"></i>
  <% end %>

  <%= link_to prescriptions_path do %>
    <i class="fa-solid fa-calendar-days"></i>
  <% end %>
</div>


<div class="container-white">
  <div class="d-flex justify-content-between align-items-center">
    <div class="header-title-purple">
      <div class="left-title">
         <h2><i class="fa-solid fa-calendar-days"></i> New appointment</h2>
      </div>
    </div>
  </div>

  <!-- simple form for new -->
  <div class="container-form">
    <%= simple_form_for @appointment, html: {data: {controller: "appointment flatpickr"}} do |f| %>

      <%= f.association :doctor,
                        collection: Doctor.all ,
                        prompt: "Specialist",
                        label:false,
                        input_html: {
                        class: "card-form w-100",
                        style: "filter: drop-shadow(0px 4px 4px #EBEBF2);"
                        },
                        wrapper_html: {
                        class: "text-primary"
                        } %>

      <%= f.input :date,
                  as: :string,
                  # as: :date,
                  # html5: true,
                  label: false,
                  wrapper_html: {
                    class: "text-primary"
                  },
                  input_html: {
                    class: "card-form d-none",
                    data: {
                      flatpickr_target: "startDateInput"
                    }
                  }%>

      <%= f.input :appointment_hour,
                  collection: 8..19,
                  prompt: "hh",
                  label:false,
                  wrapper_html: {
                    class: "text-primary"
                  },
                  input_html: {
                    class: "card-form",
                  }%>
      <%= f.input :appointment_min,
                  collection: (0..45).step(15),
                  prompt: "mm",
                  label:false,
                  wrapper_html: {
                    class: "text-primary"
                  },
                  input_html: {
                    class: "card-form",
                  } %>
      <%= f.input :comment,
                  as: :text,
                  wrapper_html: {
                    class: "text-primary"
                  },
                  input_html: {
                    class: "card-form",
                  }
                  %>
      <div class=" hours-and-minutes">
        <%= f.input :day_half,
                  label: "Morning / Afternoon",
                  required: true,
                  placeholder: "Select between pills, cares or exercises",
                  # hint: "Select between pills, cares or exercises",
                  as: :radio_buttons,
                  collection: %w[AM PM],
                  input_html: {
                    class: "card-form",
                    style: "filter: drop-shadow(0px 4px 4px #EBEBF2);"
                  },
                  wrapper_html: {
                    class: "text-primary"
                  }
        %>
        <%= f.input :time,
                  label: "Time",
                  required: true,
                  hint: "Select the time",
                  as: :select, # as: :time pour selectionner autant d'heures et minutes qu'on veut!!
                  collection: Appointment::TIMES_MORNING,
                  wrapper_html: {
                      class: "text-primary"
                  }, # Change la couleur du label
                  input_html: {
                    class: "card-form",
                    # Change la couleur des inputs + bk-white + filter shadow
                  }
        %>
        <%= f.input :time,
                  label: "Time",
                  required: true,
                  hint: "Select the time",
                  as: :select, # as: :time pour selectionner autant d'heures et minutes qu'on veut!!
                  collection: Appointment::TIMES_AFTERNOON,
                  wrapper_html: {
                      class: "text-primary"
                  }, # Change la couleur du label
                  input_html: {
                    class: "card-form",
                    # Change la couleur des inputs + bk-white + filter shadow
                  }
        %>
      </div>
      <%= f.button :submit, class: "btn-primary mt-3"%>
    <% end %>
  </div>
</div>
