
<div class="align-items-center container-log-in d-flex flex-column justify-content-center">
  <div class="logo-my-aid">
    <%= image_tag "my-aid-plus-logo.png" %>
  </div>
  <div class="welcome-back my-3">
    <h1>Welcome back</h1>
    <p>Sign in to keep your recovery all under control !</p>
  </div>
  <div class="form-log-in w-100 my-3">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

  <%= render "devise/shared/links" %>
      <div class="d-flex justify-content-center">
        <div class="log-in-button">
          <%= f.button :submit, "Log in" %>
        </div>
      </div>
    <% end %>

  </div>
  <div class="form-actions">

  </div>
  <div class="sign-up-with">

  </div>
  <div class="logos">

  </div>
</div>
